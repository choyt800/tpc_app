  </div>
 
  
  
  <div class="actions float-right">
    <%= f.submit "CHECK IN", :class=>"button btn btn-default pad-5", data: { confirm: 'Thank you for checking in to tPC.  Have a great day!' } %>
  </div>
  
 
  
<% end %>
