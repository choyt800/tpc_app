<div class="row">
  <div class="col-sm-12 center-box field">
  

    <p id="notice"><%= notice %></p>
    
    
    
    
    <%= image_tag @member.avatar.url(:medium) %>
   
    <h1> <%= @member.first_name  %> <%= @member.last_name %></h1>
    
    <p>
      
      <strong>Role:</strong>
      <%= @member.role %>
    </p>
    
    <p>
      <strong>Status:</strong>
      <%= @member.status + " member" %>
    </p>
    

    
  
    
    
    <p>
      <strong>Email:</strong>
      <%= @member.email %>
    </p>
    
    
    <p>
      <strong>Mail service:</strong>
 
    </p>
    
   
    
    <hr>
    
    <p>
      <strong>Membership history</strong>
      
      <% if @member.memberships.blank? %>
                    No membership has been assigned.
                   
                <% else %>
                <ul>
                 
                   <% @member.memberships.each do |membership| %>
                         <li><%= membership.plan.name %> ( <%= membership.status %>) <%= membership.start_date %> - <%= membership.end_date %></li>
                   <% end %>
                   
                </ul>
      <% end %>
      
      <hr>
      
      <p> <strong>Keycard</strong>
      
      <% if @member.keycard_checkouts.blank? %>
                    No keycard has been assigned.
                   
                <% else %>
                <ul>
                 
                   <% @member.keycard_checkouts.each do |keycard_checkout| %>
                         <li><%= keycard_checkout.keycard.number %></li>
                   <% end %>
                   
                </ul>
      <% end %>
      
      
    </p>
    
    <p>
      <strong>Notes:</strong>
      <%= @member.notes %>
    </p>
    
    <hr>
    
    <%= link_to 'Edit member details', edit_member_path, :class =>"button btn btn-default pad-5"%> |
    <%= link_to 'Add membership', new_membership_path, :class =>"button btn btn-default pad-5" %> |
    <%= link_to 'Add keycard', new_keycard_checkout_path, :class =>"button btn btn-default pad-5" %> |
    <br>
     <br>
     <br>
     <br>
    <%= link_to 'View all members', members_path %>
   

  </div>
</div>
