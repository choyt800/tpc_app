<p id="notice"><%= notice %></p>

<h2 class="default-title uppercase">Listing Counts for Part Time Members</h2> 



     <table class="table table-condensed">
      <thead class="tpc-head">
        <tr>
         <th>Headshot</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Membership type</th>
          <th>Membership start date</th>
          <th>Period start</th>
          <th>Period end</th>
          <th>Days in period</th>
          <th>Days used</th>
          <th>Days left</th>
          <th colspan="3">
        </tr>
      </thead>
    
      <tbody>
        <% @members.active.joins(memberships: :plan).where("plans.name": ['Community 5','Community 10', 'Team 12', 'Team 16', 'Team 24', 'Team 48', 'Platinum Punchcard 5']).each do |member| %>
          <tr>
            <td><%= image_tag member.avatar.url(:thumb) %></td>
            <td><strong><%= member.first_name %></strong></td>
            <td><strong><%= member.last_name %></strong></td>
        
            
               
                    
                       <% member.memberships.active.each do |membership| %>
                  
                       
                            <td><%= membership.plan.name %> ( <%= membership.status %>)</td>
                            <td><%= membership.start_date %></td>
                            <td><%= membership.period_start %></td>
                            <td><%= membership.period_end %></td>
                            <td><%= membership.days %></td>
                            <td><%= membership.checkins_in_period %></td>
                            <td><%= membership.days_left %></td>
                            </td>
                   
                      <% end %>
             </td>
                 
          </tr>
        <% end %>
      </tbody>
    </table>

<br>
<%= link_to 'View Active Members', members_path, :class =>"button btn btn-default pad-5" %>


