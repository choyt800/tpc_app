
    <h1>Welcome, tPC Staff</h1>
    
    <p>Today is <%= Time.now.strftime("%A, %m/%d/%Y") %></p>
    <h2>Today's tasks</h2>

    
    <table class="details-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Notes</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% Task.where(day: Date::DAYNAMES[Time.now.wday]).each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.day %></td>
            <td><%= task.status %></td>
            <td><%= task.notes %></td>
            <td><input type="checkbox">Done</td>
           
          </tr>
        <% end %>
        <!--Put current tasks here (generated by user sign ups etc.)-->
      </tbody>
    </table>

    
    
    <div class="welcome-menu">
        
            <ul style="list-style-type:none">
                <li><%= link_to "Add to Stripe", new_charge_path, :class =>"button btn btn-default pad-5"  %></li>
                <li><%= link_to "Members Database", members_path, :class =>"button btn btn-default blue pad-5"  %></li>
                <li><%= link_to "Checkins Counter", counts_path, :class =>"button btn btn-default blue pad-5"  %></li>
                <li><%= link_to "Check In Members", new_checkin_path, :class =>"button btn btn-default blue pad-5"  %></li>
               
            </ul>
          
    </div>
   
