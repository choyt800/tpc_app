

<div class="form-group">
<p id="notice"><%= notice %></p>
<h1><i class="material-icons">group </i> Active Teams</h1>

    <table class="table table-condensed">
      <thead class="tpc-head">
        <tr>
          <th>Logo</th>
          <th>Name</th>
          <th>Team Owner</th>
          <th>Contact Email</th>
          <th>Agreement On File</th>
          <th colspan='2'></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= image_tag team.avatar.url(:thumb) %></td>
            <td><%= team.name %></td>
            <td><%= team.owner %></td>
            <td><%= team.contact_email %></td>
            <td>
              <% if team.document?%>
                <u><%= link_to "Yes ", team.document.url %></u>
              <% else %>
                No
              <% end %>
            </td>
            <td colspan='2'><%= link_to 'Show Team', team_path(team), :class =>"button btn btn-default pad-5" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>

<%= link_to 'Create New Team', new_team_path, :class =>"button btn btn-default pad-5" %>
</div>
