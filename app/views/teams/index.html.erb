<p id="notice"><%= notice %></p>

<h2 class="default-title uppercase">Listing Teams</h2>

    <table class="table table-condensed">
      <thead class="tpc-head">
        <tr>
          <th>Name</th>
          <th>Billing Contact</th>
          <th>Billing Contact's Email</th>
          <th>Agreement On File</th>
          <th colspan='2'></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= team.name %></td>
            <td><%= team.owner %></td>
            <td><%= team.owner_email %></td>
            <td>
              <% if team.document?%>
                <u><%= link_to "Yes ", team.document.url, :class => "white"%></u>
              <% else %>
                No
              <% end %>
            </td>
            <td colspan='2'><%= link_to 'Show Team', team_path(team), :class =>"button btn btn-default pad-5" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>

<%= link_to 'Create New Team', new_team_path, :class =>"button btn btn-default pad-5" %>
